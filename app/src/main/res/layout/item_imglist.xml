<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:uuko="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="view"
            type="com.example.kotlinforfilemanager.image.ImgContract.Adapter" />
        <variable
            name="data"
            type="com.example.kotlinforfilemanager.image.ImgListModel" />
    </data>
    <!--   android:onClick="@{()->view.onItemClick(data)}"-->
    <RelativeLayout

        android:longClickable="true"
        android:onClick="@{()->view.onItemClick(data.position)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        android:padding="8dp">
        <!--        uuko:src="@{data.imgViewResource,default=@drawable/ic_library_music_black_24dp}"-->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:padding="5dp" />

        <TextView
            android:text="@={data.fileName}"
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:layout_toLeftOf="@+id/checkBox"
            android:layout_toStartOf="@+id/checkBox"
            android:maxLines="1"
            android:padding="5dp"
            android:textSize="18sp" />
        <RelativeLayout
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@={data.fileCreatedTime}"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/file_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:paddingLeft="7dp"
                android:paddingStart="7dp"
                android:textSize="14sp" />

            <TextView
                android:text="@={data.fileSize}"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="14sp" />

        </RelativeLayout>
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"

            />

    </RelativeLayout>
</layout>